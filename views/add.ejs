<!DOCTYPE html>
<html>

<head>
    <title>Student Information Form</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #0b0c10; /* Dark background color */
            margin: 0;
            padding: 0;
            color: #c5c6c7; /* Light text color */
        }

        header {
            background: linear-gradient(to bottom, #1f2833, #292e32); /* Dark header background gradient */
            color: #66fcf1; /* Header text color */
            padding: 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            box-shadow: 0px 2px 5px rgba(0, 0, 0, 0.2);
        }

        h1 {
            margin: 0;
            font-size: 24px;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.2);
        }

        .container {
            background-color: #1f2833; /* Dark container background color */
            padding: 20px;
            border-radius: 5px;
            box-shadow: 0 0 5px rgba(0, 0, 0, 0.2);
            margin-top: 20px;
        }

        /* Add your other styles here */

        button.cancel-button {
            margin-top: 10px;
            margin-right: 10px;
            background-color: #6c757d; /* Secondary button color */
            color: #0b0c10; /* Text color on cancel button */
            border: none;
        }

        .btn-primary {
            background-color: #007bff; /* Blue color for primary button */
            color: #0b0c10; /* Text color on primary button */
            border: none;
        }

        .btn-primary:hover {
            background-color: #0056b3; /* Darker blue on hover */
        }

        .btn-secondary:hover {
            background-color: #545b62; /* Darker secondary button color on hover */
        }

        .form-group {
            margin-bottom: 20px;
        }

        label {
            font-weight: bold;
        }

        .form-control {
            background-color: #292e32; /* Dark form input background color */
            color: #c5c6c7; /* Light text color for form input */
            border: none;
        }

        .form-control:focus {
            background-color: #0b0c10; /* Darker form input background color on focus */
            color: #c5c6c7;
        }
    </style>

</head>

<body>
    <header>
        <h1>Add Student</h1>
    </header>
    <div class="container">
        <!-- <h1 class="mt-5">Student Information Form</h1> -->
        <form action="/submit" method="post">
            <div class="form-group">
                <label for="name">Name:</label>
                <input type="text" class="form-control" id="name" name="name" required>
            </div>
            <div class="form-group">
                <label for="father">Father:</label>
                <input type="text" class="form-control" id="father" name="father" required>
            </div>
            <div class="form-group">
                <label for="email">Email:</label>
                <input type="email" class="form-control" id="email" name="email" required>
            </div>
            <div class="form-group">
                <label for="age">Age:</label>
                <input type="number" class="form-control" id="age" name="age" min="18" max="54" required>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
            <a href="/" class="btn btn-secondary cancel-button">Cancel</a>
        </form>
    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>

</html>
